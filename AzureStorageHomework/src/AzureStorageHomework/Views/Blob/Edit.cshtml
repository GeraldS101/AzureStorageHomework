<!DOCTYPE html>
<html>
<head>
    <title>Edit Blob</title>
</head>
<body>
    <div id="page-wrapper">
        <div class="row">
            &nbsp;
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2>Edit Blob</h2>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @using (Html.BeginForm(FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <span style="color:#f00">
                                        @Html.ValidationSummary(true)
                                    </span>
                                    <span>File Name: <strong>@ViewBag.name</strong></span><br /><br />
                                    <div class="form-group">
                                        <label>New File: </label>
                                        <input type="file" id="file1" name="file1" class="btn btn-default" />
                                    </div>

                                    <button type="submit" class="btn btn-primary">Upload</button>
                                    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                                }
                            </div>
                            <!-- /.col-lg-12 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-6 -->
            <div class="col-lg-6">
                &nbsp;
            </div>
        </div>
    </div>
</body>
</html>