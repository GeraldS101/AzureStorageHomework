@using AzureStorageHomework.Models

@model EmployeeModel


@{
    ViewData["Title"] = "Delete Entry";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div id="page-wrapper">
        <div class="row">
            &nbsp;
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h2>Are you sure to delete this entry?</h2>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @using (Html.BeginForm("DeleteEntry", "Table", routeValues: new { id = Model.Id }))
                                {
                                    @Html.AntiForgeryToken()
                                    <span>Name: <strong>@Model.FirstName @Model.LastName</strong></span><br /><br />

                                    <input type="submit" class="btn btn-primary" value="Delete" />
                                    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                                }
                            </div>
                            <!-- /.col-lg-12 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-6 -->
            <div class="col-lg-6">
                &nbsp;
            </div>
        </div>
    </div>
</body>
</html>