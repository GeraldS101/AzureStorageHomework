@using AzureStorageHomework.Models.Enum
@model AzureStorageHomework.Models.ViewModel.EmployeeViewModel
@{
    ViewData["Title"] = "Table Page";
}
<div class="row">
    <div class="col-lg-12">
        <h2>Table Storage page</h2>
        <a asp-area="" asp-controller="Table" asp-action="Create">New Entry</a>
        <div>
            <table class="table table-striped table-bordered table-hover" id="dataTables-employee">
                <thead>
                    <tr>
                        <th>Employee No </th>
                        <th>First Name </th>
                        <th>Last Name </th>
                        <th>Date Hired </th>
                        <th>Active </th>
                        <th>Role </th>
                        <th>&nbsp; </th>
                    </tr>
                </thead>
                <tbody id="tblEmployee-Body">
                    @foreach (var item in Model.Employees)
                    {
                        <tr>
                            <td>@item.EmployeeId</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.DateHired</td>
                            <td>@item.isActive</td>
                            <td>@((RoleEnum)item.RoleId)</td>
                            <td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | <a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>